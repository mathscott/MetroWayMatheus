<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaShow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="Consultar a situação do Metrô/CPTM"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSegurancaShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/shield"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnArCondicionadoShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/ac"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/btnLotacaoShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/group"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Segurança" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Ar Condicionado" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Lotação" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnLimpezaShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/clean"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAssedioShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/sexual_harassment"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLentidaoShow"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/slow"
            android:gravity="left|top"
            android:textAlignment="gravity"
            android:textColor="@color/red"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal">





        <TextView
            android:id="@+id/textView6"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Limpeza" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Assédio Sexual" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Lentidão" />
    </LinearLayout>
</LinearLayout>