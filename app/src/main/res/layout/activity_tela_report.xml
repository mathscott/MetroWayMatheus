<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaReport">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="Reportar a situação do Metrô/CPTM"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoSeguranca"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/shield" />

        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoArCondicionado"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/ac" />

        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoLotacao"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/group" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Segurança" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Ar Condicionado" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Lotação" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoLimpeza"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/clean" />

        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoAssedio"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/sexual_harassment" />

        <com.example.matheus.metrowaymatheus.CheckableImageButton
            android:id="@+id/botaoLentidao"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/colorir_botoes"
            android:scaleType="fitXY"
            android:src="@drawable/slow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Lentidão" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Assédio Sexual" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="87dp"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Limpeza" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/botaoOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok" />
    </LinearLayout>


</LinearLayout>